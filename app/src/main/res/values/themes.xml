<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.FifaUltimateTeamCoin" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:colorBackground">@color/background</item>
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/navyBlue</item>
        <item name="colorOnPrimary">@color/whiteStatic</item>
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/navyBlue</item>
        <item name="colorOnSecondary">@color/whiteStatic</item>
        <item name="android:statusBarColor">@color/statusBarV21</item>
        <item name="android:colorEdgeEffect">@color/skyBlue</item>
        <item name="snackbarStyle">@style/Theme.FifaUltimateTeamCoin.Snackbar</item>
        <item name="snackbarTextViewStyle">@style/Theme.FifaUltimateTeamCoin.Snackbar.TextView</item>
        <item name="snackbarButtonStyle">@style/Theme.FifaUltimateTeamCoin.Snackbar.ActionButton</item>
        <item name="materialAlertDialogTheme">@style/Theme.FifaUltimateTeamCoin.AlertDialog</item>
    </style>

    <style name="Theme.FifaUltimateTeamCoin.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/appIconBackground</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="android:windowSplashScreenBrandingImage" tools:targetApi="s">@drawable/ic_splash_logo_xeniac</item>
        <item name="postSplashScreenTheme">@style/Theme.FifaUltimateTeamCoin.OnBoarding</item>
    </style>

    <style name="Theme.FifaUltimateTeamCoin.OnBoarding" parent="Theme.FifaUltimateTeamCoin">
        <item name="android:colorBackground">@color/skyBlue</item>
        <item name="android:statusBarColor">@color/skyBlue</item>
    </style>

    <style name="Theme.FifaUltimateTeamCoin.Snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="backgroundTint">@color/red</item>
        <item name="animationMode">slide</item>
    </style>

    <style name="Theme.FifaUltimateTeamCoin.Snackbar.TextView" parent="Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">@color/whiteStatic</item>
        <item name="android:fontFamily">@font/localized_semi_bold</item>
        <item name="android:maxLines">10</item>
    </style>

    <style name="Theme.FifaUltimateTeamCoin.Snackbar.ActionButton" parent="Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/localized_bold</item>
    </style>

    <style name="Theme.FifaUltimateTeamCoin.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintEnabled">false</item>
        <item name="boxBackgroundColor">@color/grayLight</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/radius_12dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/radius_12dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/radius_12dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/radius_12dp</item>
        <item name="boxStrokeWidth">@dimen/width_2dp</item>
        <item name="boxStrokeColor">@color/color_stroke_input</item>
        <item name="boxStrokeErrorColor">@color/red</item>
        <item name="errorTextColor">@color/red</item>
        <item name="errorIconDrawable">@null</item>
        <item name="errorTextAppearance">@style/Theme.FifaUltimateTeamCoin.TextInputLayout.Error</item>
        <item name="helperTextTextColor">@color/grayDark</item>
        <item name="helperTextTextAppearance">@style/Theme.FifaUltimateTeamCoin.TextInputLayout.Helper</item>
    </style>

    <style name="Theme.FifaUltimateTeamCoin.TextInputLayout.Error" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/localized_semi_bold</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
    </style>

    <style name="Theme.FifaUltimateTeamCoin.TextInputLayout.Helper" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/localized_semi_bold</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
    </style>

    <style name="Theme.FifaUltimateTeamCoin.LoadingProgressBar.Button" parent="Widget.MaterialComponents.CircularProgressIndicator.Small">
        <item name="android:indeterminate">true</item>
        <item name="indicatorColor">@color/whiteStatic</item>
        <item name="trackCornerRadius">@dimen/radius_12dp</item>
    </style>

    <style name="Theme.FifaUltimateTeamCoin.Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="shapeAppearance">@style/Theme.FifaUltimateTeamCoin.Button.Appearance</item>
        <item name="android:textColor">@color/whiteStatic</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:fontFamily">@font/localized_bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:padding">@dimen/padding_16dp</item>
    </style>

    <style name="Theme.FifaUltimateTeamCoin.Button.Settings" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="shapeAppearance">@style/Theme.FifaUltimateTeamCoin.Button.Appearance</item>
        <item name="strokeWidth">@dimen/width_1dp</item>
        <item name="strokeColor">@color/grayLight</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:fontFamily">@font/localized_bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingStart">@dimen/padding_16dp</item>
        <item name="android:paddingEnd">@dimen/padding_16dp</item>
        <item name="android:paddingTop">@dimen/padding_5dp</item>
        <item name="android:paddingBottom">@dimen/padding_5dp</item>
    </style>

    <style name="Theme.FifaUltimateTeamCoin.Button.Appearance" parent="ShapeAppearance.MaterialComponents">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/radius_12dp</item>
    </style>

    <style name="Theme.FifaUltimateTeamCoin.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="shapeAppearance">@style/Theme.FifaUltimateTeamCoin.TextButton.Appearance</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:fontFamily">@font/localized_bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:insetLeft">@dimen/content_inset_0dp</item>
        <item name="android:insetTop">@dimen/content_inset_0dp</item>
        <item name="android:insetRight">@dimen/content_inset_0dp</item>
        <item name="android:insetBottom">@dimen/content_inset_0dp</item>
        <item name="android:minWidth">@dimen/min_width_0dp</item>
        <item name="android:minHeight">@dimen/min_height_0dp</item>
        <item name="android:padding">@dimen/padding_5dp</item>
    </style>

    <style name="Theme.FifaUltimateTeamCoin.TextButton.Appearance" parent="ShapeAppearance.MaterialComponents">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/radius_4dp</item>
    </style>

    <style name="Theme.FifaUltimateTeamCoin.BottomNavigationView.Text" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/localized_regular</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
    </style>

    <style name="Theme.FifaUltimateTeamCoin.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextAppearance">@style/Theme.FifaUltimateTeamCoin.Toolbar.Title</item>
        <item name="android:background">@drawable/shape_rounded_toolbar</item>
        <item name="android:elevation">@dimen/elevation_3dp</item>
        <item name="titleCentered">true</item>
        <item name="contentInsetEnd">@dimen/content_inset_12dp</item>
        <item name="contentInsetStart">@dimen/content_inset_12dp</item>
    </style>

    <style name="Theme.FifaUltimateTeamCoin.Toolbar.Title" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/localized_extra_bold</item>
        <item name="android:textSize">@dimen/text_size_20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.FifaUltimateTeamCoin.ImageViewShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/radius_8dp</item>
    </style>

    <style name="Theme.FifaUltimateTeamCoin.AlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="alertDialogStyle">@style/Theme.FifaUltimateTeamCoin.AlertDialog.Style</item>
        <item name="materialAlertDialogTitleTextStyle">@style/Theme.FifaUltimateTeamCoin.AlertDialog.Title</item>
        <item name="materialAlertDialogBodyTextStyle">@style/Theme.FifaUltimateTeamCoin.AlertDialog.Body</item>
        <item name="android:checkedTextViewStyle">@style/Theme.FifaUltimateTeamCoin.AlertDialog.Choice</item>
    </style>

    <style name="Theme.FifaUltimateTeamCoin.AlertDialog.Style" parent="MaterialAlertDialog.MaterialComponents">
        <item name="shapeAppearance">@style/Theme.FifaUltimateTeamCoin.AlertDialog.Appearance</item>
    </style>

    <style name="Theme.FifaUltimateTeamCoin.AlertDialog.Appearance" parent="ShapeAppearance.MaterialComponents">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/radius_12dp</item>
    </style>

    <style name="Theme.FifaUltimateTeamCoin.AlertDialog.Title" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/navyBlue</item>
        <item name="android:textSize">@dimen/text_size_20sp</item>
        <item name="android:fontFamily">@font/localized_extra_bold</item>
    </style>

    <style name="Theme.FifaUltimateTeamCoin.AlertDialog.Body" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:fontFamily">@font/localized_regular</item>
    </style>

    <style name="Theme.FifaUltimateTeamCoin.AlertDialog.Choice" parent="Widget.MaterialComponents.CheckedTextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:fontFamily">@font/localized_regular</item>
    </style>

</resources>