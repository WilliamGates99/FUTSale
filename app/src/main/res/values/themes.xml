    <style name="Theme.FUTDeals.Button.Appearance" parent="ShapeAppearance.MaterialComponents">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/radius_12dp</item>
    </style>

    <style name="Theme.FUTDeals.ToggleButton" parent="Widget.MaterialComponents.MaterialButtonToggleGroup">
        <item name="shapeAppearance">@style/Theme.FUTDeals.ToggleButton.Appearance</item>
        <item name="strokeWidth">@dimen/width_1dp</item>
        <item name="strokeColor">@color/grayMedium</item>
        <item name="backgroundTint">@color/grayLight</item>
        <item name="selectionRequired">true</item>
        <item name="singleSelection">true</item>
    </style>

    <style name="Theme.FUTDeals.ToggleButton.Button" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="shapeAppearance">@style/Theme.FUTDeals.ToggleButton.Appearance</item>
        <item name="backgroundTint">@color/color_toggle_button_background</item>
        <item name="android:textColor">@color/color_toggle_button_text</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:fontFamily">@font/localized_semi_bold</item>
        <item name="textAllCaps">true</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingStart">@dimen/padding_5dp</item>
        <item name="android:paddingEnd">@dimen/padding_5dp</item>
        <item name="android:paddingTop">@dimen/padding_9dp</item>
        <item name="android:paddingBottom">@dimen/padding_9dp</item>
