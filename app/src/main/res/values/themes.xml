    <style name="Theme.FUTDeals.ToggleButton.Appearance" parent="ShapeAppearance.MaterialComponents">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/radius_12dp</item>
    </style>

    <style name="Theme.FUTDeals.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="shapeAppearance">@style/Theme.FUTDeals.TextButton.Appearance</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:fontFamily">@font/localized_bold</item>
        <item name="textAllCaps">false</item>
