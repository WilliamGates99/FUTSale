<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.FUTDeals" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:colorBackground">@color/background</item>
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/navyBlue</item>
        <item name="colorOnPrimary">@color/whiteStatic</item>
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/navyBlue</item>
        <item name="colorOnSecondary">@color/whiteStatic</item>
        <item name="android:statusBarColor">@color/statusBarV21</item>
        <item name="android:colorEdgeEffect">@color/skyBlue</item>
        <item name="snackbarStyle">@style/Theme.FUTDeals.Snackbar</item>
        <item name="snackbarTextViewStyle">@style/Theme.FUTDeals.Snackbar.TextView</item>
        <item name="snackbarButtonStyle">@style/Theme.FUTDeals.Snackbar.ActionButton</item>
        <item name="switchStyle">@style/Theme.FUTDeals.Switch</item>
        <item name="materialAlertDialogTheme">@style/Theme.FUTDeals.AlertDialog</item>
        <item name="android:fontFamily">@font/localized_font</item>
