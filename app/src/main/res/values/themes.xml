    <style name="Theme.FUTDeals.SplashScreen" parent="Theme.SplashScreen">
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="windowSplashScreenBackground">@color/appIconBackground</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="android:windowSplashScreenBrandingImage" tools:targetApi="s">
            @drawable/ic_splash_logo_xeniac
        </item>
        <item name="postSplashScreenTheme">@style/Theme.FUTDeals</item>
    </style>

    <style name="Theme.FUTDeals.OnBoarding" parent="Theme.FUTDeals">
        <item name="android:colorBackground">@color/skyBlue</item>
        <item name="android:statusBarColor">@color/skyBlue</item>
        <item name="android:fontFamily">@font/localized_font</item>
    </style>

    <style name="Theme.FUTDeals.Snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="backgroundTint">@color/red</item>
        <item name="animationMode">slide</item>
    </style>

    <style name="Theme.FUTDeals.Snackbar.TextView" parent="Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">@color/whiteStatic</item>
        <item name="android:fontFamily">@font/localized_semi_bold</item>
        <item name="android:maxLines">10</item>
    </style>

    <style name="Theme.FUTDeals.Snackbar.ActionButton" parent="Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/localized_bold</item>
    </style>

    <style name="Theme.FUTDeals.TextInputLayout.Title" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_8dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_8dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/localized_bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textAlignment">gravity</item>
        <item name="layout_constrainedWidth">true</item>
        <item name="layout_constraintHorizontal_bias">0</item>
    </style>

    <style name="Theme.FUTDeals.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintEnabled">false</item>
        <item name="boxBackgroundColor">@color/grayLight</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/radius_12dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/radius_12dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/radius_12dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/radius_12dp</item>
        <item name="boxStrokeWidth">@dimen/width_2dp</item>
        <item name="boxStrokeColor">@color/color_stroke_input</item>
        <item name="boxStrokeErrorColor">@color/red</item>
        <item name="errorTextColor">@color/red</item>
        <item name="errorIconDrawable">@null</item>
        <item name="errorTextAppearance">@style/Theme.FUTDeals.TextInputLayout.Error</item>
        <item name="helperTextTextColor">@color/grayDark</item>
        <item name="helperTextTextAppearance">@style/Theme.FUTDeals.TextInputLayout.Helper</item>
    </style>

    <style name="Theme.FUTDeals.TextInputLayout.Error" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/localized_semi_bold</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
    </style>

    <style name="Theme.FUTDeals.TextInputLayout.Helper" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/localized_semi_bold</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
    </style>

    <style name="Theme.FUTDeals.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="useMaterialThemeColors">true</item>
        <item name="android:minWidth">@dimen/min_width_0dp</item>
        <item name="android:minHeight">@dimen/min_height_0dp</item>
    </style>

    <style name="Theme.FUTDeals.LoadingProgressBar.Button" parent="Widget.MaterialComponents.CircularProgressIndicator.Small">
        <item name="android:indeterminate">true</item>
        <item name="indicatorColor">@color/whiteStatic</item>
        <item name="trackCornerRadius">@dimen/radius_12dp</item>
    </style>

    <style name="Theme.FUTDeals.LoadingProgressBar.Button.Outlined" parent="Widget.MaterialComponents.CircularProgressIndicator.Small">
        <item name="android:indeterminate">true</item>
        <item name="indicatorColor">@color/black</item>
        <item name="trackCornerRadius">@dimen/radius_12dp</item>
    </style>

    <style name="Theme.FUTDeals.Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="shapeAppearance">@style/Theme.FUTDeals.Button.Appearance</item>
        <item name="android:textColor">@color/whiteStatic</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:fontFamily">@font/localized_bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:padding">@dimen/padding_16dp</item>
    </style>

    <style name="Theme.FUTDeals.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="shapeAppearance">@style/Theme.FUTDeals.Button.Appearance</item>
        <item name="strokeWidth">@dimen/width_1dp</item>
        <item name="strokeColor">@color/grayLight</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:fontFamily">@font/localized_bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:padding">@dimen/padding_16dp</item>
