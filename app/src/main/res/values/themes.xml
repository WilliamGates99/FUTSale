    <style name="Theme.FUTDeals.BottomNavigationView.Text" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/localized_regular</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
    </style>

    <style name="Theme.FUTDeals.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:layout_width">@dimen/width_0dp</item>
